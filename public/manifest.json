{
  "name": "Mastodon Link",
  "version": "1.3.0",
  "author": "David Calano <dcalano.dev>",
  "manifest_version": 3,
  "description": "Easier linking to a remote user's home instance",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}